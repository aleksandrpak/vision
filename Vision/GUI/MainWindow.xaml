<Window x:Class="Vision.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vision.GUI"
        mc:Ignorable="d"
        Title="Vision" Height="480" Width="640">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_View">
                <MenuItem Name="ColorMenuItem" IsCheckable="True" IsChecked="True" Header="_Color" />
                <MenuItem Name="DepthMenuItem" IsCheckable="True" Header="_Depth" />
                <MenuItem Name="MapMenuItem" IsCheckable="True" Header="_Map" />
            </MenuItem>
        </Menu>
        <Grid>
            <Image Name="StreamingImage" />
        </Grid>
    </DockPanel>
</Window>
